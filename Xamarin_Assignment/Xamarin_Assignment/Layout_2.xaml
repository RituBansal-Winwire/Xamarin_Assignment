<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Xamarin_Assignment.Layout_2">
               
    <ContentPage.Content>
        <StackLayout Padding="1,10,0,0">
            <Label Text="nyc_photograher" FontSize="20" />
            <StackLayout >
                <Image Source="https://aka.ms/campus.jpg" Aspect="AspectFit" HeightRequest="220" WidthRequest="600" />
            </StackLayout>
            <StackLayout Orientation="Horizontal">
                <Label Text="Like" FontSize="18" TextColor="#1dabf0" />
                <Label Text="Comment" FontSize="18" TextColor="#1dabf0"/>
                <Label Text="Share" FontSize="18" TextColor="#1dabf0"/>
            </StackLayout>
            <BoxView 
                   HeightRequest="1"
                   Color="#f0f0f0"
                   />
            <Label Text="This is a shot yesterday in Skanor, Sweden, when driving home, from a couple of days of work in Denmark." FontSize="18" TextColor="DarkBlue"/>
        </StackLayout>
        </ContentPage.Content>
</ContentPage>