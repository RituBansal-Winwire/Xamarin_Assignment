                <Button  Grid.Row="1" Grid.Column="2" Text="6" TextColor = "#28282c" BackgroundColor="#fff"  FontSize="30" CornerRadius="20"></Button>
                <Button  Grid.Row="2" Grid.Column="0" Text="7" TextColor = "#28282c" BackgroundColor="#fff" FontSize="30" CornerRadius="20"></Button>
                <Button  Grid.Row="2" Grid.Column="1" Text="8" TextColor = "#28282c" BackgroundColor="#fff"  FontSize="30" CornerRadius="20"></Button>
                <Button  Grid.Row="2" Grid.Column="2" Text="9" TextColor = "#28282c" BackgroundColor="#fff" FontSize="30" CornerRadius="20" ></Button>
                <Button  Grid.Row="3" Grid.Column="1" Text="0" TextColor = "#28282c" BackgroundColor="#fff"  FontSize="30" CornerRadius="20"></Button>
               
            </Grid>

            <Button Text="Dial" TextColor = "#28282c" BackgroundColor="#96ca2d" FontSize="40" CornerRadius="30"></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>